<%= form_for(resource, :as => resource_name, 
:url => session_path(resource_name), html: {class: 'form-signup'},
role: "form") do |f| %>
      <%= devise_error_messages! %>
<h2 class="form-signin-heading">Sign Up</h2>
  <%= f.text_field :name, :autofocus => true, placeholder: 'Name', class: "form-control" %>
  <%= f.email_field :email, :autofocus => true, placeholder: 'Email Address', class: "form-control" %>  
  <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
  <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: "form-control" %>
  <%= f.submit "Sign Up", class: "btn btn-primary" %>
<% end %>

<div class="form-signup">
  <%= render "devise/shared/links" %>  
</div>